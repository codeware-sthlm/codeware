{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    ":ignoreModulesAndTests",
    ":semanticCommitScopeDisabled",
    ":timezone(Europe/Stockholm)",
    "replacements:all",
    "schedule:weekly",
    "workarounds:all"
  ],

  "groupName": "weekly dependencies",
  "updateNotScheduled": false,

  "automerge": true,
  "automergeType": "branch",
  "rebaseWhen": "auto",
  "minimumReleaseAge": "3 days",
  "prConcurrentLimit": 10,
  "prHourlyLimit": 4,

  "labels": ["dependencies", "renovate"],
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",

  "rangeStrategy": "auto",
  "dependencyDashboard": true,

  "lockFileMaintenance": {
    "enabled": true
  },

  "packageRules": [
    {
      "description": "Security updates configuration",
      "matchUpdateTypes": ["patch", "minor", "major"],
      "matchCategories": ["security"],
      "automerge": true,
      "prCreation": "immediate",
      "prConcurrentLimit": 0,
      "groupName": "security updates"
    },
    {
      "description": "Skip updates for packageManager",
      "matchPackageNames": ["packageManager"],
      "enabled": false
    },
    {
      "description": "Skip major updates for packages migrated to ESM only",
      "matchPackageNames": [
        "@octokit/request-error",
        "chalk",
        "replace-in-file"
      ],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Skip all Payload packages and its peers",
      "matchPackageNames": [
        "@lexical/*",
        "@payloadcms/*",
        "graphql",
        "lexical",
        "payload",
        "sharp"
      ],
      "enabled": false
    },
    {
      "description": "Skip all Nx packages",
      "matchPackageNames": ["@nx/*", "@nrwl/*", "create-nx-workspace", "nx"],
      "enabled": false
    },
    {
      "description": "Skip all React packages and its peers",
      "matchPackageNames": [
        "@hono/*",
        "@remix-run/*",
        "prism-react-renderer",
        "react*",
        "*/*react*",
        "remix-hono",
        "remix-utils"
      ],
      "enabled": false
    },
    {
      "description": "Skip other third party packages that are managed by Nx",
      "matchPackageNames": [
        "@swc/*",
        "@types/express",
        "@types/jest",
        "@vitejs/*",
        "@vitest/*",
        "esbuild",
        "eslint",
        "eslint-config-next",
        "eslint-config-prettier",
        "express",
        "jest*",
        "next",
        "typescript-eslint",
        "typescript",
        "verdaccio",
        "vite",
        "vitest"
      ],
      "enabled": false
    }
  ]
}
