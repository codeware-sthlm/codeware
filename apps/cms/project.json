{
  "name": "cms",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cms",
  "projectType": "application",
  "tags": ["scope:cms", "type:app"],
  "// targets": "remove custom dev target once @cdwr/nx-payload supports turbopack (COD-319)",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "next dev --turbopack",
        "cwd": "apps/cms"
      }
    },
    "dev-fresh": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["echo 'y' | nx payload cms migrate:fresh", "nx dev cms"],
        "parallel": false
      }
    },
    "reset-db": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx src/utils/reset-db.ts",
        "cwd": "apps/cms",
        "env": {
          "DISABLE_DB_PUSH": "true",
          "NODE_ENV": "development",
          "SEED_SOURCE": "off"
        }
      }
    },
    "seed": {
      "metadata": {
        "description": "Ad-hoc seed process using the local-api."
      },
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx src/utils/seed.ts",
        "cwd": "apps/cms",
        "env": {
          "NODE_ENV": "development"
        }
      }
    },
    "verify": {
      "metadata": {
        "description": "Verify that the last migration works as expected."
      },
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsx src/utils/verify-last-migration.ts",
        "cwd": "apps/cms",
        "env": {
          "DISABLE_DB_PUSH": "true",
          "NODE_ENV": "development",
          "SEED_SOURCE": "off"
        }
      }
    }
  }
}
