{
  "name": "shared-util-payload",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared/util/payload/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:util"],
  "// targets": "to see all targets run: nx show project shared-util-payload --web",
  "targets": {
    "proxy": {
      "executor": "nx:run-commands",
      "metadata": {
        "description": "Start the nginx multi-tenant payload proxy"
      },
      "options": {
        "commands": ["docker compose up -d"],
        "cwd": "libs/shared/util/payload/src/lib/proxy"
      }
    },
    "proxy-cmd": {
      "executor": "nx:run-commands",
      "metadata": {
        "description": "Run docker compose commands for the payload proxy"
      },
      "options": {
        "commands": ["docker compose"],
        "cwd": "libs/shared/util/payload/src/lib/proxy",
        "forwardAllArgs": true
      }
    }
  }
}
