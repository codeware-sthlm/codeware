{
  "name": "nx-migrate-action",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx-migrate-action/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": ["scope:packages", "type:action"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nx-migrate-action",
        "main": "packages/nx-migrate-action/src/index.ts",
        "tsConfig": "packages/nx-migrate-action/tsconfig.lib.json",
        "assets": [
          "packages/nx-migrate-action/*.md",
          "packages/nx-migrate-action/action.yml"
        ],
        "generatePackageJson": true,
        "additionalEntryPoints": ["packages/nx-migrate-action/src/action.ts"],
        "format": ["cjs", "esm"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest"
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
