# Database connection string running app outside of Docker
<% if(database === 'mongodb') { %>
DATABASE_URL=mongodb://localhost/<%= name %>
<% } else { %>
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/<%= name %>
<% } %>
# Secret Payload key
PAYLOAD_SECRET=your-secret-key
